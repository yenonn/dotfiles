{
  "configurations": {
    "Python: Attach To Vim": {
      "variables": {
        "port": "5678",
        "host": "localhost"
      },
      "adapter": "multi-session",
      "configuration": {
        "request": "attach"
      }
    },
    "Python: Pytest": {
      "adapter": "debugpy",
      "configuration": {
        "type": "python",
        "request": "launch",
        "module": "pytest",
        "console": "integratedTerminal",
        "cwd": "${workspaceRoot}",
        "args": [
          "-s",
          "${file}"
        ],
        "justMyCode": true
      }
    },
    "Python: Run current script": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "args": [ "*${args:--update-gadget-config}" ],
        "justMyCode#json": "${justMyCode:true}"
      }
    }
  }
}
